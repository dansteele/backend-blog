<% @posts.each do |p| %>
  <div class="post">
    <h4><%=p.title%></h4>
    <p><%= p.body %></p>
  </div>
<% end %>


<h3>New Post</h3>

<% form_for @post, url_for(:post, :create, :author_id => @author.id) do |f| %>

  <% fieldset_tag do %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.hidden_field :author_id %>

    <%= f.label :body %>
    <%= f.text_area :body %>

  <% end %>

<% end %>