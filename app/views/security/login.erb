<!DOCTYPE html>
<html>
<head>
  <title>Login</title>
</head>
<body>
<% if @message %>
  <p><%=@message%></form>
<% end %>


<% form_tag url_for(:security, :login ) do%>
  <% field_set_tag do %>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  <% end %>

  <% field_set_tag do %>
    <%= label_tag :password %>
    <%= text_field_tag :password %>
  <% end %>

  <%= submit_tag "Login"%>
<% end %>


<%= link_to "Sign up", url_for( :security, :signup)%>


</body>
</html>