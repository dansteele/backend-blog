<!DOCTYPE html>
<html>
<head>
  <title>All authors</title>
</head>
<body>
<table>
  <tr>
    <% @authors.first.attributes.keys.each do |header| %>
      <th>
      <%= header %>
      </th>
    <% end %>
  </tr>

  <% @authors.each do |person| %>
    <tr>
    <% person.attributes.values.each_with_index do |value, index| %>
      <td>
        
      <% if index == 1%>
        <%= link_to value, url_for(:posts, :show, :id => person.id )%>
      <% else %>
        <%= value %>
      <% end %>
      </td>
    <% end %> 
    </tr>
    <% end %>
</table>
</body>
</html>